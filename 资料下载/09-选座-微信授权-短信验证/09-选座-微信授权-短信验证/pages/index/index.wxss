.header {
  position: fixed;
  left: 0;
  top: 0;
  width: 750rpx;
  z-index: 999;
}
.scroll {
  z-index: 1;
  position: relative;
}
.bg-linear {
  position: absolute;
  z-index: -1;
  background: linear-gradient(#e22d2c, #efefef);
  width: 750rpx;
  height: 200rpx;
}
.swiper {
  overflow: hidden;
  height: 200rpx;
}
.swiper .image {
  width: 100%;
}
.grid {
  display: flex;
  justify-content: space-between;
}
.grid .navigator {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.grid .navigator .image {
  width: 100rpx;
  height: 100rpx;
}
.panel {
  display: flex;
}
.panel .navigator {
  min-width: 190rpx;
  border: 1rpx solid #efefef;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.panel .navigator .image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: -10rpx;
  bottom: -10rpx;
  transform: rotate(45deg);
}
.totop {
  position: fixed;
  z-index: 2;
  right: 20rpx;
  bottom: 20rpx;
}

.comm {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.comm .item {
  width: 300rpx;
  position: relative;
}
.comm .item .cover {
  height: 425rpx;
}
.comm .item .rank {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.totop {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
}
